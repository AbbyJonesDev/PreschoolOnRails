<div class="panel">
  <%= render 'layouts/admin/file_uploader_tabs' %>
  <h2><small>Update Calendar</small></h2>
  <%= render 'form' %>
</div>

<div class="panel lower-panel">
  <h2><small> Current Calendar </small></h2>

  <div class="row">
    <div class="medium-6 columns">
      Year: <%= @calendar.year %>
    </div>
    <div class="medium-6 columns">
      Updated: <%= date_to_s(@calendar.updated_at) %>
    </div>
  </div>
  <br>
  <div class="row">
    <object data="<%= @calendar.calendar_file.url %>" type="application/pdf" 
      class="small-12 columns embedded-pdf">
      <p>
        It appears you don't have a PDF plugin for this browser.
        No problem... You can <a href="<%= @calendar.calendar_file.url %>">click here to
        download the PDF file.</a>
      </p>     
    </object>
  </div>
</div>