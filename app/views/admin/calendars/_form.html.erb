<%= form_for [:admin, @calendar], multipart: true do |f| %>

  <% if @calendar.errors.any? %>
    <div id="error_explanation">
      <p>
        <%= pluralize(@calendar.errors.count, "error") %> prevented this calendar from being saved:
      </p>
      <ul>
        <% @calendar.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="row">
    <div class="medium-8 columns">
      <%= f.label :title, "Title:" %>
      <%= f.text_field :title %>
    </div>
    <div class="medium-4 columns">
      <%= f.label :current, "Current?" %>
      <br>
      <div class="medium-6 columns">
        <%= f.label :current, "Yes", style: "display:inline" %>
        <%= f.radio_button :current, true %>
      </div>
      <div class="medium-6 columns">
        <%= f.label :current, "No", style: "display:inline" %>
        <%= f.radio_button :current, false %>
      </div>
    </div>
  </div>

  <div class="row">
    <div class="medium-12 columns">
      <%= f.file_field :calendar_file %>
    </div>
  </div>

  <br>

  <div class="row">
    <div class="medium-2 columns">
      <%= f.submit "Submit" %>
    </div>
    <div class="medium-2 columns">
      <%= link_to "Cancel", admin_calendars_path %>
    </div>
  </div>
<% end %>

