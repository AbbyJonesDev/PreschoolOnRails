<div class="panel">
  <h1 class="text-center"><small>Peek at Our Week(s) and Vocabulary</small></h1>
  <%= render 'form' %>
</div>

<div class="panel lower-panel">
  <h2><small> Uploaded Peeks and Vocabulary </small></h2>

  <table>
    <thead>
      <th> Date </th>
      <th> Email Notification </th>
      <th> Edit/Delete </th>
    </thead>

    <tbody>
      <% @peeks.each do |peek| %>
        <tr>
          <td> <%= link_to date_to_s(peek.date), "/parents/curriculum/peek/#{peek.id}" %> </td>
          <td>
            <% if peek.email_sent? %>
              Sent
            <% else %>
              <%= link_to "Send Now", "/email_peek/#{peek.id}" %>
            <% end %>
          </td>
          <td> 
            <%= link_to "Edit", edit_admin_peek_path(peek) %> /
            <%= link_to "Delete", admin_peek_path(peek), method: :delete, 
                  data: { confirm: "Are you sure?" } %>
          </td>        
        </tr>
      <% end %>
    </tbody>
  </table>
</div>