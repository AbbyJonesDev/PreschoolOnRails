<div class="panel">
  <h1 class="text-center"><small>Newsletters</small></h1>
  <%= render 'form' %>
</div>

<div class="panel lower-panel">
  <h2><small> Uploaded Newsletters </small></h2>

  <table>
    <thead>
      <th> Date </th>
      <th> Email Notification </th>
      <th> Edit/Delete </th>
    </thead>

    <tbody>
      <% @newsletters.each do |newsletter| %>
        <tr>
          <td> 
            <%= link_to date_to_s(newsletter.date), parents_newsletter_path(newsletter) %> 
          </td>
          <td>
            <% if newsletter.email_sent? %>
              Sent
            <% else %>
              <%= link_to "Send Now", "/email_newsletter/#{newsletter.id}" %>
            <% end %>
          </td>
          <td> 
            <%= link_to "Edit", edit_admin_newsletter_path(newsletter) %> /
            <%= link_to "Delete", admin_newsletter_path(newsletter), method: :delete, 
                  data: { confirm: "Are you sure?" } %>
          </td>        
        </tr>
      <% end %>
    </tbody>
  </table>
</div>