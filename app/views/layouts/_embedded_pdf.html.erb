<!-- Embedded pdf file -->
<!-- Locals: file -->

<main class="row">
  <% if file.size != nil %>
    <object data="<%= file.url %>" type="application/pdf" 
      class="embedded_pdf show-for-medium-up medium-12 columns">    
        <p>
          It appears you don't have a PDF plugin for this browser.
          No problem... You can <a href="<%= file.url %>">click here to
          download the PDF file.</a>
        </p>     
    </object>
  <% else %>
    <p class="text-center"> The file you requested is missing.  </p>
    <p class="text-center"> Please check back later. </p>
  <% end %>
</main>